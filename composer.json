{
  "type": "project",
  "name": "zacarias/symfony-base-project",
  "license": "proprietary",
  "minimum-stability": "stable",
  "prefer-stable": true,
  "authors": [
    {
      "name": "Zacar√≠as Calabria",
      "email": "zacarias.calabria@gmail.com"
    }
  ],
  "require": {
    "php": "^8.3",
    "ext-ctype": "*",
    "ext-iconv": "*",
    "symfony/flex": "^2",
    "symfony/framework-bundle": "^7",
    "symfony/dotenv": "^7",
    "symfony/console": "^7",
    "symfony/runtime": "^7",
    "symfony/yaml": "^7",
    "symfony/messenger": "^7",
    "symfony/validator": "^7",
    "symfony/serializer": "7",
    "symfony/property-access": "7",
    "lambdish/phunctional": "^2.1"
  },
  "require-dev": {
    "roave/security-advisories": "dev-latest",
    "phpunit/phpunit": "^10",
    "fakerphp/faker": "^1",
    "rector/rector": "^0.19.2",
    "phpstan/phpstan": "^1.10",
    "phpstan/extension-installer": "^1.3",
    "phpstan/phpstan-symfony": "^1.3",
    "phpstan/phpstan-phpunit": "^1.3",
    "vimeo/psalm": "^5.22",
    "psalm/plugin-symfony": "^5.1",
    "psalm/plugin-phpunit": "^0.18.4",
    "phpmd/phpmd": "^2.15",
    "symplify/easy-coding-standard": "^12.1"
  },
  "config": {
    "allow-plugins": {
      "php-http/discovery": true,
      "symfony/flex": true,
      "symfony/runtime": true,
      "phpstan/extension-installer": true
    },
    "sort-packages": false
  },
  "autoload": {
    "psr-4": {
      "Acme\\Ui\\Cli\\": "./apps/vending-machine/src/",
      "Acme\\": "./src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\Acme\\Ui\\Cli\\": "./tests/apps/vending-machine/src/",
      "Tests\\Acme\\": "./tests/src/"
    }
  },
  "replace": {
    "symfony/polyfill-ctype": "*",
    "symfony/polyfill-iconv": "*",
    "symfony/polyfill-php72": "*",
    "symfony/polyfill-php73": "*",
    "symfony/polyfill-php74": "*",
    "symfony/polyfill-php80": "*",
    "symfony/polyfill-php81": "*"
  },
  "scripts": {
    "post-install-cmd": [
      "@cache-clear"
    ],
    "post-update-cmd": [
      "@cache-clear"
    ],
    "cache-clear": [
      "@vending-machine-cache-clear"
    ],
    "vending-machine-cache-clear": [
      "@php bin/vending-machine cache:clear"
    ],
    "auto-scripts": {
      "cache:clear": "symfony-cmd",
      "assets:install %PUBLIC_DIR%": "symfony-cmd"
    },
    "code-static-analyse": [
      "@phpstan",
      "@psalm",
      "@phpmd"
    ],
    "phpstan": [
      "# <comment>--> Running PHPStan analisy...</comment>",
      "./vendor/bin/phpstan analyse --no-progress --memory-limit=512M"
    ],
    "psalm": [
      "# <comment>--> Running Psalm analisy...</comment>",
      "./vendor/bin/psalm --no-progress"
    ],
    "phpmd": [
      "# <comment>--> Running PHPMD analisy...</comment>",
      "./vendor/bin/phpmd apps,src,tests ansi phpmd.xml"
    ],
    "ecs-check": [
      "# <comment>--> Running ecs check...</comment>",
      "./vendor/bin/ecs --no-progress-bar"
    ],
    "ecs-fix": [
      "# <comment>--> Running ecs fix...</comment>",
      "./vendor/bin/ecs --fix --no-progress-bar"
    ]
  },
  "conflict": {
    "symfony/symfony": "*"
  },
  "extra": {
    "symfony": {
      "allow-contrib": false,
      "require": "^7"
    },
    "phpstan": {
      "includes": [
        "extension.neon"
      ]
    }
  }
}
